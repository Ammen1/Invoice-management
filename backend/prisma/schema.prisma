// Prisma schema file for the Invoice Manager project

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  hash      String
  firstName String?
  lastName  String?
  invoices  Invoice[] @relation("UserInvoices")

  @@map("users")
}

model Invoice {
  id           Int      @id @default(autoincrement())
  invoiceNumber Int     @unique
  clientName   String
  items        Json     
  totalAmount  Float
  dueDate      DateTime
  userId       Int
  user         User     @relation("UserInvoices", fields: [userId], references: [id])

  @@map("invoices")
}
